{% extends 'base.html.twig' %}
{% block title %} Create Invoice {% endblock %}

{% block body %}

    <div class="container py-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card border-secondary">
                    <div class="card-header">
                        <h6 class=" my-2 center">Invoice</h6>
                    </div>
                    <div class="card-body">

                        {{ form_start(form) }}
                        {{ form_row(form.billNumber) }}
                        {{ form_row(form.billDate) }}
                        {{ form_row(form.customer) }}

                        {{ form_row(form.subtotal) }}
                        <div class="form-group">

                            <div class="row">

                                <div class="col-md-5">
                                    {{ form_label(form.vat) }}
                                    <input type="text" class="form-control" id="inputName">
                                </div>
                                <div class="col-md-1 mt-4">%</div>
                                <div class="col-md-5 mt-4">

                                    {{ form_widget(form.vat) }}

                                </div>

                            </div>

                        </div>

                        <div class="form-group">
                            <div class="row">

                                <div class="col-md-5">
                                    {{ form_label(form.discount) }}
                                    <input type="text" class="form-control" id="inputName">
                                </div>
                                <div class="col-md-1 mt-4">%</div>
                                <div class="col-md-5 mt-4">
                                    {{ form_widget(form.discount) }}
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>


            <div class="col-md-6">
                <div class="card border-secondary">
                    <div class="card-header">
                        <h6 class=" my-2 center">Invoice</h6>
                    </div>
                    <div class="card-body">






                        {{ form_row(form.remarks) }}

                        <div class="form-group">
                            <label for="inputName">Cash</label>
                            <input type="text" class="form-control" id="inputName">
                        </div>

                        <div class="form-group">
                            <label for="inputName">Change</label>
                            <input type="text" class="form-control" id="inputName">
                        </div>
                        <div class="row ml-2">
                            <div class="col-xs-3">
                                <div class="form-group">

                                    {{ form_row(form.Submit) }}

                                </div>
                            </div>
                            <div class="col-xs-3  ml-3">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger float-right"><i
                                                class="fa fa-print"></i> Print
                                    </button>

                                </div>
                            </div>


                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>


            <div class="col-md-6 mt-3">
                <div class="card border-secondary">
                    <div class="card-header">
                        <h6 class=" my-2 center">Product Info</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputName">Product Name</label>
                            <div class="input-group mb-3">
                                <select class="custom-select" name="" id="inputGroupSelect02">
                                    <option selected>Choose...</option>
                                    {% for product in products %}
                                        <option value="1">{{ product.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputName">Unit Price</label>
                            <input type="text" class="form-control" id="inputName" placeholder="Unit Price">
                        </div>

                        <div class="form-group">
                            <label for="inputName">Quantity</label>
                            <input type="text" class="form-control" id="inputName" placeholder="Quantity">
                        </div>

                        <div class="form-group">
                            <label for="inputName">Total Amount</label>
                            <input type="text" class="form-control" id="inputName" placeholder="Total Amount">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success float-right">Add</button>
                        </div>


                        <div class="row pt-5">
                            <table class="table table-bordered ml-5">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">P.Name</th>
                                    <th scope="col">U.Price</th>
                                    <th scope="col">Qty.</th>
                                    <th scope="col">T.Amount</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                <tr>
                                    <th scope="row">1</th>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>Otto</td>
                                    <td>Otto</td>
                                    <td>
                                        <a href="" style="color: red"
                                           onclick="return confirm('Are you sure you want to delete this item?');">
                                            <i class="fa fa-trash ml-4"></i> </a>
                                    </td>
                                </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>



{% endblock %}
{% block javascripts %}
{% endblock %}