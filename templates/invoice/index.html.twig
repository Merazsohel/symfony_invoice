{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <div class="row">
        <div class="container">
            <div class="col-md-12 mt-5">
                <a href="{{ path('invoice_create') }}" class="btn btn-danger mb-3"><i class="fa fa-plus"> New</i></a>
                <table class="table table-bordered center">
                    <thead>
                    <tr>
                        <th>Bill No.</th>
                        <th>Bill Date</th>
                        <th>Sub Total</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for invoice in invoices %}

                        <tr>

                            <td>{{ invoice.BillNumber }}</td>
                            <td>{{ invoice.BillDate|date("d/m/Y") }}</td>
                            <td>{{ invoice.subtotal }} </td>
                         <td>
                                <a href="{{ path('invoice_show', {'id': invoice.id}) }}" class="btn btn-info"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('invoice_edit', {'id': invoice.id}) }}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                                <a href="{{ path('invoice_delete',{'id': invoice.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>

{% endblock %}
