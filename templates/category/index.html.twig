{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="row">
    <div class="container">
        <div class="col-md-12 mt-5">
            <a href="{{ path('category_new') }}" class="btn btn-info mb-3">Create new</a>
    <table class="table table-bordered center">
        <thead>
            <tr class="float-center">
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>

                <td>
                    <div style="width:33%;float:left;" >
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-info">show</a>

                    </div>

                    <div style="width:33%; float:right;">
                        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary">edit</a>

                    </div>


                    <div style="width:33%; float:right;">
                        <form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button class="btn btn-danger">Delete</button>
                        </form>

                    </div>
                </td>



            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>

{% endblock %}
