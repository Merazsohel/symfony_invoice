{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="row">
<div class="container">
    <div class="col-md-12 mt-5">

    <table class="table table-bordered center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>

            <tr>
                <th>Category</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }} Tk.</td>
            </tr>
        </tbody>
    </table>
        <a href="{{ path('product_index') }}" class="btn btn-info">Back to list</a>
        <div class="mt-3">
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>

</div>
</div>





{% endblock %}
