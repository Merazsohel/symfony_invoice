{% extends 'base.html.twig' %}

{% block title %}New Settings{% endblock %}

{% block body %}

    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="card border-secondary">
                            <div class="card-header">
                                <h3 class="mb-0 my-2">Update</h3>
                            </div>
                            <div class="card-body">

                                {{ form_start(form) }}
                                {{ form_widget(form) }}



                                <button class="btn btn-success">{{ button_label|default('Update') }}</button>

                                {{ form_end(form) }}

                                <a href="{{ path('settings_index') }}" class="btn btn-info mt-3">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
