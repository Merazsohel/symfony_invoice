{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-body">

                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ setting.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ setting.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Value</th>
                                        <td>{{ setting.value }}</td>
                                    </tr>
                                    <tr>
                                        <th>Active</th>
                                        <td>{{ setting.active ? 'Yes' : 'No' }}</td>
                                    </tr>
                                </tbody>

                            </table>
                            <a href="{{ path('settings_index') }}" class="btn btn-success">Back To List</a>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


{% endblock %}
