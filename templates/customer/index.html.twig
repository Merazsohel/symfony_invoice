{% extends 'base.html.twig' %}
{% block title %} Customer List {% endblock %}

{% block body %}

    <div class="row">
        <div class="container">
            <div class="col-md-12 mt-5">
                <a href="{{ path('customer_create') }}" class="btn btn-danger mb-3"><i class="fa fa-plus"> New</i></a>
                <a href="{{ path('customer_create') }}" class="btn btn-danger mb-3 float-right"><i class="fa fa-print"> Print</i></a>
                <table class="table table-bordered center">
                    <thead>
                    <tr>
                        <th scope="col">Customer ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">City</th>
                        <th scope="col">Contact No.</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for customer in customers %}
                    <tr>
                        <th scope="row">{{ customer.id }}</th>
                        <td>{{ customer.name }}</td>
                        <td>{{customer.email}}</td>
                        <td>{{ customer.address }}</td>
                        <td>{{ customer.city }}</td>
                        <td>{{ customer.contact }}</td>
                        <td>

                            <a href="{{ url('show',{'id':customer.id}) }}" class="btn btn-info">  <i class="fa fa-eye"></i> </a>
                            <a href="{{ url('edit',{'id':customer.id}) }}" class="btn btn-success">  <i class="fa fa-edit"></i> </a>
                            <a href="{{ url('delete',{id: customer.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');"> <i class="fa fa-trash"></i> </a>
                        </td>
                    </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %} {% endblock %}